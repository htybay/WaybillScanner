<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.coder.zzq.waybillscannerlib">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:screenOrientation="portrait"
            android:name=".activity.TrunckLoadActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".activity.LoadSurveyActivity"
                  android:screenOrientation="portrait">
        </activity>
        <activity android:name=".activity.UnloadActivity"
                  android:screenOrientation="portrait">
        </activity>

        <activity android:name=".activity.UnloadSurveyActivity"
                  android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>